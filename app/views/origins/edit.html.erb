<h1>Edit Origin: <%= @origin.location %></h1>

<%= form_with scope: :origin, model: @origin, local: true do |form| %>

	<p>
		<%= form.label :location %><br>
		<%= form.text_field :location %>
	</p>

	<p>
		<%= form.label :phone %><br>
		<%= form.text_field :phone %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Back', origins_path %> 