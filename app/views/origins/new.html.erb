<h1>New Origin</h1>

<%= form_with scope: :origin, url: origins_path, local: true do |form| %>

    <p>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </p>

    <p>
        <%= form.label :phone %>
        <%= form.text_field :phone %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>