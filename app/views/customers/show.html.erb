<h1> Displaying a Customer Record </h1>

<p>
  <strong>Customer Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Customer roast:</strong>
  <%= @customer.id %>
</p>

<% @customer.koffees.each do |koffee| %>
    <%= koffee.id %>
    <%= koffee.name %>
    <%= koffee.roast %>
<% end %>


<%= link_to 'Back', customer_path %>

<%= link_to 'Edit', edit_customer_path(@customer) %>